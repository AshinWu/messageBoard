<% include header %>
<div class="front-container">
    <div class="front-wrapper">
        <div class="container column">
            <div class="center">
                <!-- 正文 -->
                <div>
                    <div class="go-back">< 返回首页</div>
                    <div class="send-div">
                        <form class="message-form modify-form" method="post">
                            <div class="send-head">
                                编辑留言
                            </div>
                            <div class="send-title">
                                <div class="head-txt">
                                    <input type="text" name="title" class="title" placeholder="请输入标题(20字以内)" value="<%= topic[0].mi_title %>" maxlength="20">
                                    <span class="tip"></span>
                                    <input type="hidden" name = "mid" class="mid" value="<%= topic[0].mi_id %>">
                                </div>
                            </div>
                            <div class="main-txt">
                                <textarea name="content" class="content" placeholder="请输入内容(255字以内)" maxlength="255"><%= topic[0].mi_content %></textarea>
                            </div>
                            <div class="warp-footer">
                                <div class="warp-footer-btns">
                                    <div class="release-btn">
                                        <a class="save-btn">保存修改</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/javascripts/modify.js"></script>
<% include footer %>